@model ImageSliderApp.Models.Overlay

<h2>Add Overlay</h2>

<form asp-action="AddOverlay" method="post">
    <div class="form-group">
        <label for="content">Overlay Content:</label>
        <input type="text" name="content" class="form-control" placeholder="Enter overlay content" required />
    </div>

    <div class="form-group">
        <label for="position">Overlay Position:</label>
        <select name="position" class="form-control" required>
            <option value="top-left">Top Left</option>
            <option value="top-right">Top Right</option>
            <option value="bottom-left">Bottom Left</option>
            <option value="bottom-right">Bottom Right</option>
        </select>
    </div>

    <div class="form-group">
        <label for="room">Choose Room:</label>
        <select name="room" class="form-control" required>
            <option value="intern">Intern</option>
            <option value="extern">Extern</option>
            <option value="showroom1">Showroom 1</option>
            <option value="showroom2">Showroom 2</option>
            <option value="showroom3">Showroom 3</option>
        </select>
    </div>

    <!-- Voeg het TemplateID toe als verborgen veld -->
    <input type="hidden" name="templateId" value="@ViewBag.TemplateID" />

    <button type="submit" class="btn btn-primary">Add Overlay</button>
</form>
